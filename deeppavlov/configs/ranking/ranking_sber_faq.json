{
  "dataset_reader": {
    "name": "sber_faq_reader",
    "data_path": "./sber_faq_data"
  },
  "dataset_iterator": {
    "name": "ranking_iterator",
    "seed": 243
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "id": "insurance_vocab",
        "name": "ranking_vocab",
        "save_path": "vocabs/",
        "load_path": "vocabs/",
        "use_matrix": false,
        "num_ranking_samples": 10,
        "pos_pool_sample": true,
        "pos_pool_rank": false,
        "max_sequence_length": 200,
        "tokenizer": {"name": "split_tokenizer"},
        "embedder": "random",
        "fit_on": ["context", "response", "pos_resp_pool", "neg_resp_pool"],
        "in": ["context", "response", "pos_resp_pool", "neg_resp_pool"],
        "out": ["x"]
      },
      {
        "in": ["x"],
        "in_y": ["y"],
        "len_vocab": "#insurance_vocab.len_vocab",
        "len_char_vocab": "#insurance_vocab.len_char_vocab",
        "out": ["y_predicted"],
        "name": "ranking_model",
        "device_num": 0,
        "train_now": true,
        "vocab_name": "sber_faq",
        "vocabs_path": "sber_faq_data",
        "embeddings": "fasttext",
        "embeddings_path": "sber_faq_embeddings/ft_sber_sg_300.bin",
        "embedding_dim": 300,
        "use_matrix": false,
        "seed": 243,
        "max_sequence_length": 80,
        "reccurent": "bilstm",
        "max_pooling": true,
        "shared_weights": true,
        "hidden_dim": 300,
        "learning_rate": 1e-3,
        "distance": "euclidian",
        "margin": 0.1,
        "save_path": "sber_faq_ranking/model_weights.h5",
        "load_path": "sber_faq_ranking/model_weights.h5",
        "update_embeddings": "online",
        "interact_pred_num": 3
      }
    ],
    "out": ["y_predicted"]
  },
  "train": {
    "epochs": 200,
    "batch_size": 256,
    "pytest_max_batches": 2,
    "metrics": ["r@1", "r@5", "r@10", "rank_response", "loss"],
    "validation_patience": 5,
    "val_every_n_epochs": 1,
    "log_every_n_batches": 10


  },
  "metadata": {
    "labels": {
      "telegram_utils": "RankingModel",
      "server_utils": "Ranker"
    },
    "download": [
      {
        "url": "http://lnsigo.mipt.ru/export/embeddings/wiki.ru.bin",
        "subdir": "sber_faq_embeddings"
      }
    ]
  }
}